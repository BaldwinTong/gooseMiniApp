page,
view,
text,
swiper,
swiper-item,
image,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

page {
  /* font-family: SimHei, 'Helvetica Neue', Arial, 'Droid Sans', sans-serif; */
  font-size: 28rpx;
  width: 100%;
  color: #333;
  /* 主题颜色 */
  --themeColor: #f43256
}

input {
  border: none;
  outline: none;
}

image {
  width: 100%;
}

.overflow1{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.overflow2 {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;

}