.head{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper{
  width: 686rpx;
  height: 260rpx;
  overflow: hidden;
  border-radius: 16rpx;
}

.swiper image{
  width: 100%;
  height: 260rpx;
}

.tab{
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
}

.iconList{
  width: 686rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 60rpx auto 20rpx;
}

.iconList .item{
  width: 114rpx;
  height: 114rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item image{
  width: 68rpx;
  height: 68rpx;
}

.item .iconTitle{
  margin-top: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.blank_line{
  width: 100%;
  height: 20rpx;
  background-color: #cccc;
  opacity: 0.3;
}

.news{
  width: 100%;
  margin-bottom: 60rpx;
}
.news .allLine {
  border-bottom: 1px solid #ccc;
  width: 100%;
  display: flex;
  justify-content: center;
}
.news .allLine .topTitle{
  width: 686rpx;
  height: 96rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.news .topTitle image{
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}

.news .allLine .topTitle .text{
  font-weight: 600;
}

.newsList{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

}

.newsList .news_item{
  width: 686rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid rgba(204,204,204,0.4);
}

.newsList .news_item:last-child{
  border-bottom: none;
}

.item_left{
  width: 480rpx;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}

.item_left .news_title{
  width: 100%;
  padding-right: 26rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  font-weight: 600;
}

.item_left .news_data{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 26rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #7a7e83;
}

.item_right{
  width: 210rpx;
  height: 190rpx;
  overflow: hidden;
}


.item_right image{
  width: 210rpx;
  height: 190rpx;
}


/* 弹窗 */
.popupBox{
  width: 580rpx;
  height: 400rpx;
  background-color: #fff;
}

.popupBox image{
  width: 128rpx;
  height: 128rpx;
}

.popupBox .title{
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
  border-bottom: 1px solid rgba(119,136,153, 0.2);
  text-align: center;
  line-height: 80rpx;
}

.popupBox .registerType{
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 40rpx;
  text-align: center;
}
.popupBox .registerType .text{
  margin-top: 16rpx;
  color: #484848;
}

